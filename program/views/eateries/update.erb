<% if @changes == false %>
  <header class="new_object_header">
    <h2>No New Details Entered</h2>
    <br/>
    <hr/>
    <h3>Eatery Details</h3>
    <br/>
    <p>Name: <%= @old_eatery.name %></p>
  </header>
<% else %>
  <header class="new_object_header">
    <h2>New Eatery Details Successfully Saved</h2>
    <br/>
  </header>
  <hr/>
  <section class="new_object">
    <br/>
    <h3>New Eatery Details</h3>
    <hr/>
    <p>Eatery Name: <%= @new_eatery.name %></p>
    <hr/>
  </section>
  <br/>
  <br/>
  <br/>
  <section class="new_object">
    <h3>Old Eatery Details</h3>
    <hr/>
    <p>Eatery Name: <%= @old_eatery.name %></p>
  <hr/>
  </section>
<% end %>
