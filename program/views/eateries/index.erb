<article class="main_display">
  <header>
    <h2 class="index_objects">List of All Eateries</h2>
  </header>
  <section class="left_right_container">
    <section class="left">
      <% if @eateries %>
        <header class="sub_header">
        <h3>Active Eateries</h3>
        </header>
        <br/>
          <% for eatery in @eateries %>
              <section class="object">
                <div class="sub_left">
                  <p><%= eatery.name %></p>
                </div>
                <div class="sub_right">
                 <a class="button" href="/eateries/<%= eatery.id %>">More Details</a>
                 <br/>
                 <br/>
                 <a class="button" href="/eateries/<%= eatery.id %>/edit">Modify Eatery</a>
                </div>
              </section>
              <br/>
          <% end %>
      <% else %>
      <header class="sub_header">
        <h3>No Active Eateries</h3>
      </header>
      <% end %>
    </section>
    <section class="right">
      <% if @inactive_eateries %>
      <header class="sub_header">
        <h3>Inactive Eateries</h3>
      </header>
        <% for eatery in @inactive_eateries %>
          <section class="object">
            <div class="sub_upper">
              <p><%= eatery.name %></p>
            </div>
            <div class="sub_lower">
              <a class="button" href="/eateries/<%= eatery.id %>">More Details</a>
              <br/>
              <br/>
              <a class="button" href="/eateries/<%= eatery.id %>/edit">Modify Eatery</a>
            </div>
          </section>
        <% end %>
      <% else %>
      <header class="sub_header">
        <h3>No Inactive Eateries</h3>
      </header>
      <% end %>
    </section>
  </section>
</article>
