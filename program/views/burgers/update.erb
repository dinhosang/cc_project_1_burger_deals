  <div class="empty_container">
  </div>
  <button type="submit" name="">Return to <% if @new_burger.name != "" %><%= @new_burger.name %><% else %><%= @new_burger.type %><% end %> Page</button>
  <div class="empty_container">
  </div>
</form>
