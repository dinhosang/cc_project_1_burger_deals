<article class="show_object_object">
  <header>
    <div class="upper">
      <% if @burger.name != "" %>
        <h2>"<%= @burger.name %>"</h2>
        <p><em><%= @burger.type %></em></p>
      <% else %>
        <h2><%= @burger.type %></h2>
      <% end %>
    </div>
    <div class="middle">
      <h2><%= @deal.label %></h2>
      <p>Saving Type: <%= @deal.value_string %></p>
      <p>Day Available: <%= @deal.day %></p>
    </div>
  </header>
  <section class="left_right_container">
    <div class="lower">
      <h2>Eateries</h2>
    </div>
    <% for eatery in @eateries %>
      <section class="object">
        <h2><%= eatery.name %></h2>
        <br/>
        <p>Burger Price: <%= eatery.show_burger_price_currency(@burger.id) %></p>
      </section>
    <% end %>
    <div class="back_one">
      <a href="/burgers/<%= @burger.id %>">Back to <% if @burger.name != "" %> "<%= @burger.name %>"
        <% else %>
          <%= @burger.type %>
          <% end %>
        listing</a>
    </div>
  </section>
</article>
