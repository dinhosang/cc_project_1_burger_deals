<article class="show_object">
  <header>
      <h2><%= @eatory.name %></h2>
  </header>
  <section id="burgers_eatories_deals">
    <section class="left">
      <h3>Active Deals</h3>
      <hr/>
      <% for deal in @deals %>
        <section>
          <div class="sub_left">
          <h4><%= deal.label %></h4>
          <p>Saving Type: <%= deal.value_string %></p>
          <p>Day Available: <%= deal.day %></p>
          </div>
          <div class="sub_right">
            <a href="/eatories/<%= @eatory.id %>/deals/<%= deal.id %>">Details</a>
          </div>
        </section>
        <hr/>
      <% end %>
    </section>
    <section class="right">
      <h3>Burgers</h3>
      <hr/>
      <% for burger in @burgers %>
        <section>
          <div class="sub_upper">
            <% if burger.name != "" %>
              <h4>"<%= burger.name %>"</h4>
              <p><em><%= burger.type %></em></p>
            <% else %>
              <h4><%= burger.type %></h4>
            <% end %>
          <br/>
          <p>Deals Available:
            <% if @eatory.find_deals_by_burger(burger.id) != nil %>
              Yes
            <% else %>
              No
            <% end %>
          </p>
          </div>
          <div class="sub_lower">
            <a href="/eatories/<%= @eatory.id %>/burgers/<%= burger.id %>">Details</a>
          </div>
        </section>
        <hr/>
      <% end %>
    </section>
  </section>
</article>
