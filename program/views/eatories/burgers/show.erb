<article class="show_object_object">
  <header>
    <div class="upper">
      <h2><%= @eatory.name %></h2>
    </div>
    <div class="middle">
      <% if @burger.name != "" %>
        <h2>"<%= @burger.name %>"</h2>
        <p><em><%= @burger.type %></em></p>
      <% else %>
        <h2><%= @burger.type %></h2>
      <% end %>
      <br/>
      <p>Burger Price: <%= @eatory.show_burger_price_currency(@burger.id) %></p>
    </div>
  </header>
  <section id="burgers_eatories_deals">
    <div class="lower">
      <h2>Deals</h2>
    </div>
    <% if @deals %>
    <% for deal in @deals %>
      <section class="object">
        <h2><%= deal.label %></h2>
        <br/>
        <p>Saving Type: <%= deal.value_string %></p>
        <p>Day Available: <%= deal.day %></p>
      </section>
    <% end %>
    <% else %>
      <section class="object">
        <p>No Deals Currently</p>
      </section>
    <% end %>
    <div class="back_one">
      <a href="/eatories/<%= @eatory.id %>">Back to <%= @eatory.name %>
        listing</a>
    </div>
  </section>
</article>
