<header class="edit_object_header">
  <h2>Current Deal Details</h2>
  <p>Current Label: <%= @deal.label %></p>
  <p>Current Type: <%= @deal.type %></p>
  <% if @deal.value != "" && @deal.value != nil %>
    <p>Current Value: <%= @deal.value %></p>
  <% else %>
    <p>Current Value: n/a</p>
  <% end %>
  <p>Current Day: <%= @deal.day %></p>
</header>
<hr/>
<form class="edit_object" action="/deals/<%= @deal.id %>" method="post">
  <h2>Edit Deal Details:</h2>
  <br/>
  <label for="deal_label">Deal Label: </label>
  <br/>
  <input type="text" list="labels" name="label" value="" id="deal_label" placeholder="<%= @deal.label %>" autocomplete="off" />
  <datalist class="" id="labels">
    <% for label in @deal_labels %>
      <option value="<%= label %>"><%= label %></option>
      <% end %>
  </datalist>
  <br/>
  <br/>
  <p>Deal Type:</p>
  <br/>
  <div class="deal_type_radio">
    <% for type in @deal_type_hashes %>
      <% if type['type'] == @deal.type %>
        <div class="radio_input">
        <label for="deal_type_<% type['id'] %>"><%= type['type'] %></label>
        <input type="radio" list="types" name="type_id" value="<%= type['id'] %>" id="deal_type_<%= type['id'] %>" checked/>
        </div>
      <% else %>
        <div class="radio_input">
        <label for="deal_type_<% type['id'] %>"><%= type['type'] %></label>
        <input type="radio" list="types" name="type_id" value="<%= type['id'] %>" id="deal_type_<%= type['id'] %>" />
        </div>
      <% end %>
    <% end %>
  </div>
  <br/>
  <br/>
  <label for="deal_value">Deal Value: </label>
  <br/>
  <input type="text" list="values" name="value" value="" id="deal_value" autocomplete="off" placeholder="<%= @deal.value if @deal.value %>" />
  <datalist class="" id="values">
    <option value="cheapest"></option>
    <% for value in @deal_values %>
      <option value="<%= value %>"><%= value %></option>
      <% end %>
  </datalist>
  <br/>
  <br/>
  <label for="deal_days">Day: </label>
  <br/>
  <input type="dropdown" list="days" name="day_id" value="" id="deal_days" autocomplete="off" placeholder="<%= @deal.day %>"/>
  <datalist class="" id="days">
    <% for day in @day_objects %>
      <option value="<%= day.id %>"><%= day.day %></option>
    <% end %>
  </datalist>
  <br/>
  <br/>
  <section class="return_button">
    <div class="empty_container">
    </div>
    <button type="submit" name="">Save New Details</button>
    <div class="empty_container">
    </div>
  </section>
  <br/>
</form>
<br/>
<hr/>
<br/>
<form class="delete_object" action="/deals/<%= @deal.id %>/delete" method="post">
  <h2>Delete Deal</h2>
  <br/>
  <button type="submit" name="">Delete Deal</button>
</form>
