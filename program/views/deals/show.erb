<article class="show_object">
  <header>
    <h2><%= @deal.label %></h2>
    <p>Saving Type: <%= @deal.value_string %></p>
    <p>Day Available: <%= @deal.day %></p>
  </header>
  <section id="burgers_eatories_deals">
    <section class="left">
      <h3>Burgers</h3>
      <hr/>
      <% for burger in @burgers %>
        <section>
          <div class="sub_left">
            <% if burger.name != "" %>
              <h4>"<%= burger.name %>"</h4>
              <p><em><%= burger.type %></em></p>
            <% else %>
              <h4><%= burger.type %></h4>
            <% end %>
          </div>
          <div class="sub_right">
            <a href="/deals/<%= @deal.id %>/burgers/<%= burger.id %>">Details</a>
          </div>
        </section>
        <hr/>
      <% end %>
    </section>
    <section class="right">
      <h3>Eatories With Deal</h3>
      <hr/>
      <% for eatory in @eatories %>
        <section>
          <div class="sub_upper">
          <h4><%= eatory.name %></h4>
          <br/>
          </div>
          <div class="sub_lower">
            <a href="/deals/<%= @deal.id %>/eatories/<%= eatory.id %>">Details</a>
          </div>
        </section>
        <hr/>
      <% end %>
    </section>
  </section>
</article>
