<article class="main_display">
  <header>
    <div class="header_left">
      <h2><%= @deal.label %></h2>
      <p>Saving Type: <%= @deal.value_string %></p>
      <p>Day Available: <%= @deal.day %></p>
    </div>
    <div class="header_right">
      <br/>
      <br/>
      <a class="button" href="/deals/<%= @deal.id %>/edit">Modify Details</a>
    </div>
  </header>
  <section class="left_right_container">
    <section class="left">
      <% if @burgers %>
      <header class="sub_header">
        <h3>Burgers</h3>
      </header>
      <br/>
        <% for burger in @burgers %>
          <section class="object">
            <div class="sub_left">
              <% if burger.name != "" %>
                <h4>"<%= burger.name %>"</h4>
                <p><em><%= burger.type %></em></p>
              <% else %>
                <h4><%= burger.type %></h4>
              <% end %>
            </div>
            <div class="sub_right">
              <a class="button" href="/deals/<%= @deal.id %>/burgers/<%= burger.id %>">Details</a>
            </div>
          </section>
          <br/>
        <% end %>
      <% else %>
      <header class="sub_header">
        <h3>No Burgers Assigned </h3>
      </header>
      <% end %>
    </section>
    <section class="right">
      <% if @eateries %>
      <header class="sub_header">
        <h3>Eateries With Deal</h3>
      </header>
        <% for eatery in @eateries %>
          <section class="object">
            <div class="sub_upper">
            <h4><%= eatery.name %></h4>
            <br/>
            </div>
            <div class="sub_lower">
              <a class="button" href="/deals/<%= @deal.id %>/eateries/<%= eatery.id %>">Details</a>
            </div>
          </section>
        <% end %>
      <% else %>
      <header class="sub_header">
        <h3>No Eateries Assigned</h3>
      </header>
      <% end %>
    </section>
  </section>
</article>
