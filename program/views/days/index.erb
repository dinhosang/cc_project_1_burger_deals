<article class="main_display">
  <header>
    <h2 class="index_objects">Days of the Week</h2>
  </header>
  <section class="left_right_container">
    <section class="left">
      <% if @active_days %>
        <h3>Days with Active Deals</h3>
        <hr/>
        <% for day in @active_days %>
            <section>
              <div class="sub_left">
                <p><%= day.day %></p>
              </div>
              <div class="sub_right">
               <a href="/days/<%= day.id %>">See Deals</a>
              </div>
            </section>
          <hr/>
        <% end %>
      <% else %>
        <h3>No Days with Active Deals</h3>
        <hr/>
      <% end %>
    </section>
    <section class="right">
      <% if @inactive_days %>
        <h3>Days with no Active Deals</h3>
        <hr/>
        <% for day in @inactive_days %>
          <section>
            <div class="sub_upper">
              <p><%= day.day %></p>
            </div>
            <div class="sub_lower">
            </div>
          </section>
          <hr/>
        <% end %>
      <% else %>
        <h3>All Days have Deals</h3>
        <hr/>
      <% end %>
    </section>
  </section>
</article>
